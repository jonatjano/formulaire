<!ELEMENT fenetre (text|dropdown|checkbox|tableau|boutons)+>
   <!ATTLIST fenetre longueur CDATA #REQUIRED
   					 largeur  CDATA #REQUIRED
					 x		  CDATA #REQUIRED
					 y		  CDATA #REQUIRED>
					 
   <!ELEMENT text empty>
      <!ATTLIST text type  ( chaine | entier | double | charactere ) #REQUIRED
	  				 label CDATA #REQUIRED
					 id	   ID	 #REQUIRED
					 x	   CDATA #IMPLIED
					 y	   CDATA #IMPLIED  >
					 
	<!ELEMENT dropdown (choix+)>
		<!ATTLIST dropdown type ( chaine | entier | double | booleen | charactere ) #REQUIRED
						   label CDATA #REQUIRED
						   id   ID	  #REQUIRED
						   x	CDATA #IMPLIED
						   y	CDATA #IMPLIED  >
		<!ELEMENT choix EMPTY>
			<!ATTLIST choix label CDATA #REQUIRED
							id	  ID	#REQUIRED >
							
	<!ELEMENT checkbox EMPTY>
		<!ATTLIST checkbox label CDATA #REQUIRED
						   id    ID	   #REQUIRED
						   x	CDATA #IMPLIED
						   y	CDATA #IMPLIED  >
						   
	<!ELEMENT tableau EMPTY>
		<!ATTLIST tableau label  CDATA #REQUIRED
						  id	 ID	   #REQUIRED
						  type   ( chaine | entier | double | booleen | charactere ) #REQUIRED
						  nb_lig CDATA #REQUIRED
						  nb_col CDATA #REQUIRED >
						  
	<!ELEMENT boutons (bouton+)
		<!ELEMENT bouton (#PCDATA)>
